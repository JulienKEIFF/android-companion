{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",    
    "moduleResolution": "node",              
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "./**/*.vue"],
}